@model GameStore.Domain.Entities.ShippingDetails

@{ 
    ViewBag.Title = "GameStore: order form";
}

<h2>Offer order now</h2>
<p>Pleas enter your personal </p>

@using (Html.BeginForm())
{
    <h3>Data</h3>
    <div class="form-group">
        <label>Your name:</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-contr" })
    </div>

    <h3>Address</h3>
    <div class="form-group">
        <label>First address</label>
        @Html.TextBoxFor(x => x.Line1, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Second address</label>
        @Html.TextBoxFor(x => x.Line2, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Third address</label>
        @Html.TextBoxFor(x => x.Line3, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Town</label>
        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Country</label>
        @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
    </div>

    <h3>Opptions</h3>
    <div class="checkbox">
        <label>
            @Html.EditorFor(x => x.GiftWrap)
            Use gift wrap?
        </label>
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Summ"/>
    </div>
}